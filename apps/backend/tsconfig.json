{
  "extends": "tsconfig/base",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./libs/*"]
    },
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
}
